FROM node:18-alpine AS builder
WORKDIR /app

# Copy package files
COPY ../mdhc-newyear-frontend/package*.json ./
RUN npm ci

# Copy source code
COPY ../mdhc-newyear-frontend .

# Build application
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL
RUN npm run build

# Production stage with nginx
FROM nginx:alpine

# Copy built files
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
